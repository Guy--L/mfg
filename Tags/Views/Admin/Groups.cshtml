@model List<Group>

@{
    ViewBag.Title = "Admin Tag Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <h2>Administrative Tag Groups</h2>
    <button class="btn btn-success pull-right" id="add">
        <i class="fa fa-plus"></i> Add Named Tag Group
    </button>
</div>

<div class="row-fluid">
    @Html.DisplayFor(m => m)
</div>

@section scripts {
    <script type="text/javascript">
    $(function () {
        $('#add').on('click', function () {
            var id = 0;
            location.href = '@Url.Action("Group","Admin",null,Request.Url.Scheme)/'+id;
        });
        $('button').on('click', function () {
            var $btn = $(this).is('button') ? $(this) : $(this).closest('button');
            var id = $btn.data('id');
            location.href = '@Url.Action("Group","Admin",null,Request.Url.Scheme)/' + id;
        });
    });
    </script>
}
