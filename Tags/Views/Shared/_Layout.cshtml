<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nitta Casings Production</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-fixed-top navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NCI Production Data", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.IsAdmin)
                    {
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown">Manage <span class="caret"></span></a>
                            <ul class="dropdown-menu navbar-inverse">
                                <li class="navdrop">@Html.ActionLink("Users", "Users", "Admin")</li>
                                <li class="navdrop">@Html.ActionLink("Roles", "Roles", "Admin")</li>
                                <li class="navdrop">@Html.ActionLink("Reviews", "PickReview", "Admin")</li>                                
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown">Configure <span class="caret"></span></a>
                            <ul class="dropdown-menu navbar-inverse">
                                <li class="navdrop">@Html.ActionLink("Upload", "Upload", "Admin")</li>
                                <li class="navdrop">@Html.ActionLink("Tag Groups", "Groups", "Admin")</li>                                
                            </ul>
                        </li>                    
                    }
                </ul>
                <p class="nav navbar-text navbar-right"><i class="fa fa-user"></i> &nbsp;@User.Identity.Name</p>
                <ul class="nav navbar-text navbar-right">
                    @RenderSection("actions", required: false)
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @Html.Partial("_Alerts")
        @RenderBody()
    </div>
    <footer class="footer">
        <hr /><div class="pull-left">&copy; @DateTime.Now.Year - Nitta Casings Inc</div><div class="pull-right">built @ViewBag.built</div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
